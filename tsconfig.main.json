{
  "extends": "./tsconfig",
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist/main",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true
  },

  "include": [
    "declarations.d.ts",
    "index.ts",
    "src/**/*.ts",
    "src/**/*.js",
  ],
  "exclude": [
    "node_modules/**",
    "coverage/**",
    "resources/**",
    "dist/**",
    "test/**",
    "generator/**/*.ts"
  ],

}
